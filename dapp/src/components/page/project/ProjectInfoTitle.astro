<script>
  import { navigate } from "astro:transitions/client";

  document.addEventListener("astro:page-load", async () => {
    const backButton = document.getElementById("back-button");
    if (backButton) {
      backButton.addEventListener("click", () => {
        navigate("/");
      });
    }
  });
</script>
