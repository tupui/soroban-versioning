---
import Modal from "components/utils/Modal.astro";
import Button from "components/utils/Button";
---

<Modal id="last-hash-modal">
  <div class="p-4 lg:p-9 w-[342px] lg:w-[1048px] flex items-start gap-[18px]">
    <img src="/images/scan.svg" />
    <div class="flex-grow flex flex-col gap-12">
      <div class="flex flex-col gap-9">
        <h6 class="leading-6 text-2xl font-medium text-primary">
          Latest Commit Hash
        </h6>
        <div class="flex flex-col gap-6">
          <div class="flex flex-col items-start gap-[18px]">
            <p class="text-base text-tertiary">Hash</p>
            <div class="p-[12px_18px] flex gap-[18px] bg-[#FFEFA8]">
              <p class="commit-hash text-xl text-primary"></p>
              <div class="flex items-center gap-3">
                <button class="commit-link-copy">
                  <img src="/icons/clipboard.svg" />
                </button>
                <a class="commit-link" href="" target="_blank">
                  <img src="/icons/link.svg" />
                </a>
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-[18px]">
            <p class="text-base text-tertiary">Hash Date</p>
            <p class="commit-date text-xl text-primary"></p>
          </div>
          <div class="flex flex-col gap-[18px]">
            <p class="text-base text-tertiary">Hash Author</p>
            <p class="commit-author text-xl text-primary"></p>
          </div>
        </div>
      </div>
      <div class="flex justify-end gap-[18px]">
        <button
          class="p-[12px_24px] bg-[#F5F1F9] text-xl text-primary"
          onclick="this.closest('dialog').close()"
        >
          Close
        </button>
        <Button icon="/icons/logos/web_white.svg">
          View Hash on Web-Site
        </Button>
      </div>
    </div>
  </div>
</Modal>
