---
const { line1, link } = Astro.props;
---

<div class="py-4">
  <!-- card start-->
  <div
    class="h-16 md:h-20 px-3 sm:px-4 md:px-5 bg-zinc-100 rounded-[45px] shadow-card border border-black justify-between items-center flex text-black"
  >
    <div class="flex-row justify-between items-center inline-flex">
      <div class="flex-row justify-start items-start flex">
        <div
          class="px-[7px] bg-lime-300 rounded-[7px] flex-row justify-start items-start flex"
        >
          <div class="text-base md:text-xl font-medium">{line1}</div>
        </div>
      </div>
      <a class="justify-start items-center gap-2 sm:gap-2 md:gap-2.5 inline-flex" href={link}>
        <div class="w-6 sm:w-8 md:w-9 h-6 sm:h-8 md:h-9 relative">
          <img class="w-6 sm:w-8 md:w-9 h-6 sm:h-8 md:h-9 left-0 top-0 absolute" src="./ag.svg" />
        </div>
        <div class="text-base sm:text-lg font-normal leading-7">Explore</div>
      </a>
    </div>
    <!--<div class="w-[210px] h-[170px] pt-0.5 pb-[1.95px] justify-center items-center flex">-->
    <!--    <img class="hidden md:block" src={image} />-->
    <!--</div>-->
  </div>
  <!-- card end-->
</div>
