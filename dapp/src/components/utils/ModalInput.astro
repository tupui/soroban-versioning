---
const {
  type = "text",
  id,
  name,
  placeholder,
  required = false,
  inputClass = "",
  minlength,
  maxlength,
  onKeyUp,
  ...rest
} = Astro.props;
---

<input
  type={type as astroHTML.JSX.HTMLInputTypeAttribute}
  id={id}
  name={name}
  class={`block px-2 py-1 sm:p-3 w-full text-base text-black bg-white rounded-lg border shadow-sm focus:ring-black focus:border-black ${inputClass}`}
  placeholder={placeholder}
  required={required}
  minlength={minlength}
  maxlength={maxlength}
  onkeyup={onKeyUp}
  data-testid={name}
  {...rest}
/>
