---
import ConnectWallet from "../ConnectWallet.astro";
---

<header class="mt-20 sm:mt-24 md:mt-32">
  <nav class="w-full top-0 left-0 z-50 fixed bg-white">
    <div class="max-w-screen-xl mx-auto px-6 md:px-14 xl:px-14">
      <div class="flex flex-wrap items-center justify-between mx-auto py-3">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <img src="/logo.svg" class="h-8 sm:h-10 md:h-11" alt="Logo" />
        </a>
        <div
          class="hidden w-full md:block md:w-auto font-medium"
          id="navbar-default"
        >
          Tansu - <span
            class="sm:text-sm px-1.5 font-medium bg-lime rounded-md"
          >
            Alpha
          </span>
        </div>
        <div class="md:block md:w-auto" id="navbar-default">
          <div
            class="px-2.5 sm:px-4 md:px-6 py-1.5 sm:py-2 rounded-xl border border-zinc-900 bg-white cursor-pointer hover:bg-black text-black hover:text-white inline-flex"
          >
            <ConnectWallet />
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
